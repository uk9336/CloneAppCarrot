<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloneAppCarrot" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/app_carrot</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
        <!-- enable window content transitions -->
        <!-- 액티비티 전환 시 이미지 이동 애니메이션 사용 -->
        <item name="android:windowActivityTransitions">true</item>

    </style>


    <!--    폰트적용 TextView-->
    <style name="FontTv" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cafe24_ssurround</item>
    </style>

</resources>