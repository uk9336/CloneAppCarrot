<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jw.cloneappcarrot">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".global.GlobalApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CloneAppCarrot">

        <activity
            android:name=".feature.product.ProductActivity"
            android:exported="false" /> <!-- 상품 보기 화면 -->
        <activity
            android:name=".feature.splash.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 스플래시 화면 -->
        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>